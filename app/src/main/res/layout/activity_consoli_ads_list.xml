<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sheeda.sampleapp.ConsoliAdsListActivity">

    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="#FE642E"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <EditText
            android:id="@+id/et_scene_index"
            android:padding="8dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:inputType="number"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_weight="1"
            android:hint="ENTER SCENE INDEX"
            android:layout_width="0dp"
            android:layout_height="60dp" />

        <EditText
            android:id="@+id/et_list_index"
            android:padding="8dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:inputType="number"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_weight="1"
            android:hint="ENTER LIST INDEX"
            android:layout_width="0dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <RelativeLayout
        android:padding="8dp"
        android:background="#FE642E"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Spinner
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/btn_load_ad"
            android:id="@+id/spinner_ad_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/btn_load_ad"
            android:padding="8dp"
            android:background="#80000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:text="LOAD AD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/list_recipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
